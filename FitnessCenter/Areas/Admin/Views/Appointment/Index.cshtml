@using System.Globalization
@model IEnumerable<FitnessCenter.Models.Appointment>
@{
    ViewData["Title"] = "Appointments";
}
<div class="card border-0 shadow mt-4">
    <div class="card-header bg-white ml-0 py-3">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary py-2">Appointments</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Service.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.User.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Trainer.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.AppointmentDate)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.StartTime)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Status)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var statusClass = item.Status switch
                    {
                        AppointmentStatus.Confirmed => "bg-success",
                        AppointmentStatus.Cancelled => "bg-danger",
                        AppointmentStatus.Pending => "bg-warning text-dark",
                        _ => "bg-secondary"
                    };
                    <tr>
                        <td class="align-middle">@item.Service.Name</td>
                        <td class="align-middle">@item.User.Name</td>
                        <td class="align-middle">@item.Trainer.Name</td>
                        <td class="align-middle">@item.AppointmentDate.ToShortDateString()</td>
                        <td class="align-middle">@item.StartTime.ToString(@"hh\:mm")</td>
                        <td class="align-middle">
                            <span class="badge @statusClass text-uppercase">@item.Status</span>
                        </td>
                        <td class="align-middle text-end">
                            @if (item.Status.Equals(AppointmentStatus.Pending))
                            {
                                <div class="btn-group" role="group">
                                    <a asp-action="Confirm" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-1 rounded">
                                        <i class="bi bi-pencil-square"></i> Confirm
                                    </a>
                                    <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1 rounded">
                                        <i class="bi bi-trash3-fill"></i> Cancel
                                    </a>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>