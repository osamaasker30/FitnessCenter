@model FitnessCenter.Models.Trainer

@{
    ViewData["Title"] = "Eğitmen Silme Onayı";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-danger py-2">Eğitmen Silme Onayı</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <h3 class="text-center mb-4">Bu eğitmeni silmek istediğinizden emin misiniz?</h3>

        <form asp-action="Delete" method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <div class="col-12 form-floating py-2">
                            <input asp-for="Name" disabled class="shadow border-0 form-control" />
                            <label asp-for="Name" class="form-label ms-2 mt-1"></label>
                        </div>

                        <div class="col-12 form-floating py-2">
                            <input asp-for="Specialty" disabled class="shadow border-0 form-control" />
                            <label asp-for="Specialty" class="form-label ms-2 mt-1"></label>
                        </div>

                        <div class="col-12 form-floating py-2">
                            <textarea asp-for="Bio" disabled rows="3" class="shadow border-0 form-control" style="height: 100px;"></textarea>
                            <label asp-for="Bio" class="form-label ms-2 mt-1"></label>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button class="btn btn-danger border form-control" type="submit">
                                    <i class="bi bi-trash3-fill"></i> Silmeyi Onayla
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a class="btn btn-outline-primary border form-control" asp-action="Index">Geri Dön</a>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-2 p-4">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" width="100%" style="border-radius:5px; object-fit: cover;" alt="Trainer Resmi" />
                    }
                    else
                    {
                        <div class="text-center py-5 border rounded bg-light text-muted">Resim Yok</div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>