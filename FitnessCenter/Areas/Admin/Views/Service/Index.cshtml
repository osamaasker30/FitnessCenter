@using System.Globalization
@model IEnumerable<FitnessCenter.Models.Service>

@{
    // Admin panelinde Service modelini listeler
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div class="card border-0 shadow mt-4">
    <div class="card-header bg-white ml-0 py-3">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary py-2">SERVICES</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Upsert" class="btn btn-primary border form-control" style="width: auto;">
                    <i class="bi bi-plus-square-fill"></i> Yeni Hizmet Oluştur
                </a>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.DurationMinutes)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Fee)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.MaxCapacity)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th scope="col">Trainers</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>

                        <td class="align-middle text-muted small">
                            @(item.Description != null && item.Description.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)
                        </td>

                        <td class="align-middle">@Html.DisplayFor(modelItem => item.DurationMinutes) dk</td>
                        <td class="align-middle text-success fw-bold">@item.Fee.ToString("c", new CultureInfo("en-US"))</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.MaxCapacity)</td>

                        <td class="align-middle">
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </td>

                        <td class="align-middle">
                            @if (item.ServiceTrainers != null && item.ServiceTrainers.Any())
                            {
                                // Her bir eğitmen için döngü kurarak isimleri listele
                                @foreach (var link in item.ServiceTrainers)
                                {
                                    // Trainer nesnesine ServiceTrainer linki üzerinden erişim
                                    <span class="badge bg-secondary d-block text-start text-uppercase mb-1">@link.Trainer.Name</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-light text-dark">Atanmadı</span>
                            }
                        </td>
                        <td class="align-middle text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-1 rounded">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1 rounded">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>