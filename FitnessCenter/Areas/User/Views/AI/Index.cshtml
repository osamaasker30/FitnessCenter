// Areas/User/Views/Ai/Index.cshtml
@model FitnessCenter.Models.ViewModels.AIViewModel
@{
    ViewData["Title"] = "AI Fitness Recommendation";
}
<h2>Get AI fitness & diet recommendations</h2>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="HeightCm" class="form-label"></label>
        <input asp-for="HeightCm" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="WeightKg" class="form-label"></label>
        <input asp-for="WeightKg" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="BodyType" class="form-label">Body Type / Notes</label>
        <input asp-for="BodyType" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="UploadedImage" class="form-label">Photo (optional)</label>
        <input asp-for="UploadedImage" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Get Recommendation</button>
</form>