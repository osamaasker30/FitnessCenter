@model FitnessCenter.Models.BodyProfile
@using System.Net
@{
    ViewData["Title"] = "AI Recommendation Result";
    var rec = (Model.Recommendation ?? string.Empty).Trim();
    var headings = new[] { "Summary", "Exercise Plan", "Nutrition", "Safety Notes" };
    var sections = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);

    if (!string.IsNullOrEmpty(rec))
    {
        var lowerRec = rec.ToLowerInvariant();
        for (int i = 0; i < headings.Length; i++)
        {
            var h = headings[i];
            var start = lowerRec.IndexOf(h.ToLowerInvariant(), StringComparison.Ordinal);
            if (start < 0) continue;

            var nextIndices = new List<int>();
            for (int j = 0; j < headings.Length; j++)
            {
                if (j == i) continue;
                var idx = lowerRec.IndexOf(headings[j].ToLowerInvariant(), StringComparison.Ordinal);
                if (idx > start) nextIndices.Add(idx);
            }

            int end = nextIndices.Any() ? nextIndices.Min() : rec.Length;
            var content = rec.Substring(start + h.Length, end - (start + h.Length)).Trim();
            sections[h] = content;
        }

        if (!sections.Any())
        {
            sections["Recommendation"] = rec;
        }
    }

    var plainTextForExport = !string.IsNullOrEmpty(rec) ? rec : "No recommendation available.";
}
<section class="container my-5 py-5">
    <style>
        /* Stronger, modern color accents */
        .ai-header { background: linear-gradient(90deg,#0f172a,#0b5ed7); color: #fff; border-radius: .25rem; padding: .6rem 1rem; }
        .ai-title { color: #ffdd57; font-weight:700; }
        .ai-card-accent { border-left: 6px solid #ff416c; }
        .ai-btn-primary {
            background: linear-gradient(90deg,#ff416c,#ff6b6b);
            border: none;
            color: #fff;
            box-shadow: 0 4px 12px rgba(255,65,108,0.18);
        }
        .ai-btn-ghost {
            background: transparent;
            border: 1px solid rgba(11,92,255,0.15);
            color: #0b5ed7;
        }
        .ai-download {
            background: linear-gradient(90deg,#06b6d4,#3b82f6);
            border: none;
            color: #fff;
        }
        .ai-stat { font-weight:600; color:#0b5ed7; }
        .accordion-button:not(.collapsed) {
            background: linear-gradient(90deg,#e9f2ff,#fff);
            color: #0b5ed7;
            font-weight:600;
        }

    </style>

    <div class="card border-0 shadow mt-4">
        <div class="card-header bg-white ml-0 py-3">
            <div class="row align-items-center">
                <div class="col-6">
                    <div class="ai-header">
                        <h2 class="m-0 ai-title">AI Recommendation</h2>
                    </div>
                </div>
                <div class="col-md-6 text-end text-muted small">
                    Generated: @Model.CreatedAt.ToLocalTime().ToString("g")
                </div>
            </div>
        </div>

        <div class="card-body p-4 row">
            <div class="col-md-4">
                <div class="card mb-3 ai-card-accent">
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Uploaded" class="img-fluid rounded mb-3" style="max-height:320px; object-fit:cover;" />
                        }
                        <ul class="list-group list-group-flush text-start">
                            <li class="list-group-item"><strong>Height:</strong> <span class="ai-stat">@((Model.HeightCm.HasValue) ? $"{Model.HeightCm} cm" : "—")</span></li>
                            <li class="list-group-item"><strong>Weight:</strong> <span class="ai-stat">@((Model.WeightKg.HasValue) ? $"{Model.WeightKg} kg" : "—")</span></li>
                            <li class="list-group-item"><strong>Body Type:</strong> <span class="ai-stat">@(!string.IsNullOrEmpty(Model.BodyType) ? Model.BodyType : "—")</span></li>
                        </ul>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button id="copyBtn" class="btn ai-btn-ghost btn-sm">Copy Recommendation</button>
                    <a id="downloadLink" class="btn ai-download btn-sm" download="recommendation.txt" href="data:text/plain;charset=utf-8,@(WebUtility.UrlEncode(plainTextForExport))">Download TXT</a>
                    <div class="d-flex mt-2">
                        <a asp-area="User" asp-controller="Ai" asp-action="Index" class="btn btn-light btn-sm me-2">Back</a>
                        <!-- Redirect to Services index page as requested -->
                        <a asp-area="User" asp-controller="Service" asp-action="Index" class="btn btn-primary btn-sm">View Services</a>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                @if (sections.Any())
                {
                    <div class="accordion" id="aiAccordion">
                        @{
                            int idx = 0;
                        }
                        @foreach (var kvp in sections)
                        {
                            var heading = kvp.Key;
                            var content = kvp.Value ?? "";
                            var panelId = $"panel{idx}";
                            var headingId = $"heading{idx}";
                            var cleaned = WebUtility.HtmlEncode(content).Replace("\r\n", "\n").Replace("\n", "<br/>");
                            <div class="accordion-item mb-2">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="accordion-button @(idx == 0 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#@panelId" aria-expanded="@(idx == 0 ? "true" : "false")" aria-controls="@panelId">
                                        @heading
                                    </button>
                                </h2>
                                <div id="@panelId" class="accordion-collapse collapse @(idx == 0 ? "show" : "")" aria-labelledby="@headingId" data-bs-parent="#aiAccordion">
                                    <div class="accordion-body">
                                        <div style="white-space:pre-wrap;">@Html.Raw(cleaned)</div>
                                    </div>
                                </div>
                            </div>
                            idx++;
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-secondary">No AI recommendation available.</div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        (function () {
            const copyBtn = document.getElementById('copyBtn');
            const text = decodeURIComponent("@WebUtility.UrlEncode(plainTextForExport)");
            copyBtn?.addEventListener('click', async function () {
                try {
                    await navigator.clipboard.writeText(text);
                    copyBtn.innerText = 'Copied!';
                    setTimeout(() => copyBtn.innerText = 'Copy Recommendation', 2000);
                } catch (err) {
                    window.prompt("Copy the recommendation text below:", text);
                }
            });
        })();
    </script>
}
